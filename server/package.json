{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "lint": "eslint ./ --ext .ts,.js,.json",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "build": "tsc && npm run copy-files",
    "clean": "rimraf dist/",
    "test": "npm run test -- --watchAll",
    "serve": "node dist/server.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true
        }
      ]
    },
    "ignorePatterns": [
      "/dist/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/jade": "^0.0.30",
    "@types/morgan": "^1.9.3",
    "@types/swig": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4"
  }
}
