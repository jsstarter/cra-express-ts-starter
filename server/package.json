{
  "name": "server",
  "version": "0.1.0",
  "description": "Client App",
  "author": "vkkotha",
  "license": "ISC",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "nodemon",
    "lint": "eslint .",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "build": "npm run lint && tsc && npm run copy-files",
    "clean": "rimraf dist/",
    "test": "npm run test -- --watchAll",
    "serve": "node --es-module-specifier-resolution=node ./dist/server.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": "warn",
      "@typescript-eslint/no-unsafe-call": "warn",
      "@typescript-eslint/no-misused-promises": [
        "error",
        {
          "checksVoidReturn": false
        }
      ]
    },
    "ignorePatterns": [
      "build/**",
      "dist/**",
      "node_modules/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "dependencies": {
    "consolidate": "^0.16.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "swig-templates": "^2.0.3"
  },
  "devDependencies": {
    "@types/consolidate": "^0.14.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/jade": "^0.0.30",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4"
  }
}
